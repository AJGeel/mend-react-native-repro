{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "module": "es2015"
  },
  "include": [
    "*.mjs",
    "./.*.js",
    "*.js",
    "*.ts",
    "*.tsx",
    "src/**/*",
    "__mocks__/**/*"
  ],
  "exclude": ["node_modules"]
}
